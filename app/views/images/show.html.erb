<div align = "center">
  <% if @image %>
    <h1> Here is your image</h1>
    <p>
      <h4>Your Image</h4>
      <%= image_tag @image.url %> </br>
      <%= link_to 'Delete image above', image_path(@image),
                  method: :delete,
                  data: { confirm: 'Are you sure you want to delete this image?' } %>
    </p>
    <ul>
      <h4> Your tags </h4>
      <% @image.tag_list.each do |tag| %>
          <li><%= tag %></li>
      <% end %>
    </ul>
  <% end %>
</div>



