<div align = "center">
  <div id="flash-message">
    <% flash.each do |_key, value| %>
      <%= content_tag :div, value %>
    <% end %>
  </div>
  <h1>Welcome to the Image Sharer</h1>
  <h3> <%= link_to 'Upload image using url', new_image_path %> </h3>
  <h2>List of existing images</h2>
  <table id="images-list">
    <% @images.each do |image| %>
        <tr class = "js-image-item">
          <td>
            <%= link_to(image_tag(image.url, width: '400', class:'image-view'),
                             image_path(image),
                             class: 'js-image-url')%>
          </td>
          <td>
            <%= link_to 'Delete image', image_path(image),
                        method: :delete,
                        data: { confirm: 'Are you sure you want to delete this image?' } %>
          </td>
          <td>
            <% if image.tag_list.any? %>
              <p class="has_tag">Your tags: </p>
                <% image.tag_list.each do |tag| %>
                    <li><%= link_to tag, images_path(tag: tag) %></li>
                <% end %>
            <% end %>
          </td>
        </tr>
    <% end %>
  </table>
</div>
